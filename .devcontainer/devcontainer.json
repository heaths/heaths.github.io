{
    "name": "Jekyll",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "forwardPorts": [4000],
    "remoteUser": "jekyll",
    "postCreateCommand": "bundle install",
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
    },
    "extensions": [
        "docsmsft.docs-authoring-pack",
        "editorconfig.editorconfig",
        "github.vscode-pull-request-github"
    ]
}
